{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/**/*.tsx": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": "https://musio-app-production.up.railway.app"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
