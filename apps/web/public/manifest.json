{
  "name": "Mus.io - Music Discovery & Sharing",
  "short_name": "Mus.io",
  "description": "Discover, share, and enjoy music samples in a TikTok-style feed with rich metadata from Discogs and Spotify",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#3B82F6",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["music", "entertainment", "social"],
  "lang": "en",
  "dir": "ltr",
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile-feed.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "TikTok-style music feed on mobile"
    },
    {
      "src": "/screenshots/desktop-feed.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Music feed on desktop"
    }
  ],
  "shortcuts": [
    {
      "name": "Feed",
      "description": "Browse the TikTok-style music feed",
      "url": "/feed",
      "icons": [
        {
          "src": "/icons/shortcut-feed.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Search",
      "description": "Search for music and artists",
      "url": "/search",
      "icons": [
        {
          "src": "/icons/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Upload",
      "description": "Upload your own music samples",
      "url": "/upload",
      "icons": [
        {
          "src": "/icons/shortcut-upload.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "audio/*": [".mp3", ".wav", ".ogg", ".m4a", ".aac"],
        "video/*": [".mp4", ".webm", ".mov"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+musio",
      "url": "/?track=%s"
    }
  ],
  "share_target": {
    "action": "/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*", "video/*"]
        }
      ]
    }
  }
}
