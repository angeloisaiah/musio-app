# Railway Environment Variables for Mus.io API
# Copy these to your Railway project variables

# Database Configuration (Railway will auto-set DATABASE_URL)
DATABASE_URL=postgresql://postgres:password@containers-us-west-XX.railway.app:XXXX/railway

# Alternative Database Config (if DATABASE_URL parsing fails)
DB_HOST=containers-us-west-XX.railway.app
DB_PORT=XXXX
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# App Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
APP_VERSION=1.0.0

# CORS Origins (include your Vercel domain)
CORS_ORIGINS=https://musio-web.vercel.app,https://musio-bn0oq5vqj-angeloisaiahs-projects.vercel.app,http://localhost:3000,http://localhost:3001

# External API Keys
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
DISCOGS_TOKEN=your_discogs_personal_access_token_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Redis (optional, for job queues)
REDIS_URL=redis://localhost:6379
